{
    "name": "headlessx-pro",
    "version": "2.0.0",
    "private": true,
    "packageManager": "pnpm@9.15.0",
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=9.0.0"
    },
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "dev": "nx run-many -t dev --parallel=2",
        "build": "nx run-many -t build",
        "start": "nx run-many -t start --parallel=2",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format --write .",
        "knip": "knip",
        "db:push": "nx run headlessx-api:db:push",
        "db:migrate": "nx run headlessx-api:db:migrate",
        "db:studio": "nx run headlessx-api:db:studio",
        "db:deploy": "nx run headlessx-api:db:deploy",
        "camoufox:fetch": "nx run headlessx-api:camoufox:fetch",
        "install:all": "pnpm install"
    },
    "pnpm": {
        "overrides": {
            "@isaacs/brace-expansion": ">=5.0.1",
            "hono": ">=4.11.9",
            "lodash": ">=4.17.23"
        }
    },
    "devDependencies": {
        "@biomejs/biome": "^2.4.4",
        "@nx/workspace": "^22.5.2",
        "knip": "^5.85.0",
        "nx": "^22.5.2",
        "only-allow": "^1.2.1"
    }
}