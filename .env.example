# REQUIRED: Security token for API authentication
# Generate a secure token with: openssl rand -hex 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
AUTH_TOKEN=REPLACE_WITH_YOUR_SECURE_RANDOM_TOKEN_HERE

# Server configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Domain configuration (replace with your actual domain)
DOMAIN=yourdomain.com
SUBDOMAIN=headlessx
# Full domain will be: headlessx.yourdomain.com

# Browser configuration
BROWSER_TIMEOUT=60000
EXTRA_WAIT_TIME=3000
MAX_CONCURRENCY=3

# API configuration
BODY_LIMIT=10mb
MAX_BATCH_URLS=10

# Website configuration
WEBSITE_ENABLED=true
WEBSITE_PATH=./website/out

# Logging configuration
DEBUG=false
LOG_LEVEL=info

# Optional: Performance tuning
UV_THREADPOOL_SIZE=128
NODE_OPTIONS=--max-old-space-size=4096